{{#partial "content"}}

    <h1></h1>

    {{#if news}}
        {{#each news}}
            <div class="container" id="col">
                <div class="well" style="width:45%">
                    <p style="color:black;font-size:25px">News' heading:{{heading}} </p>
                    <p style="color:black;font-size:25px">News' news:{{news}}</p>
                    <p style="color:black;font-size:25px">News' content:{{content}}</p>
                    <br>
                    <br>
                </div>

            </div>

        {{/each}}
    {{else}}
        <p style="text-align:center;margin-top:15%;color:black;font-size:40px;font-weight:bold">No news added!!</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}