{{#partial "content"}}

    <h1></h1>

    {{#if user}}
        {{#each user}}
            <div class="container" id="col">
                <div class="well" style="width:45%">
                    <p style="color:black;font-size:25px">User's positions:{{positions}}</p>
                    <p style="color:black;font-size:25px">User's department_id:{{department_id}} </p>
                    <p style="color:black;font-size:25px">User's role:{{role}}</p>
                    <br>
                </div>

            </div>

        {{/each}}
    {{else}}
        <p style="text-align:center;margin-top:15%;color:black;font-size:40px;font-weight:bold">No user added!!</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}