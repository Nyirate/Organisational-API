{{#partial "content"}}

    <h1></h1>

    {{#if departs}}
        {{#each departs}}
            <div class="container" id="col">
                <div class="well" style="width:45%">
                    <p style="color:black;font-size:25px">Department's name:{{name}} </p>
                    <p style="color:black;font-size:25px">Department's employees:{{employees}}</p>
                    <p style="color:black;font-size:25px">Department's description:{{description}}</p>
                    <br>
                </div>

            </div>

        {{/each}}
    {{else}}
        <p style="text-align:center;margin-top:15%;color:black;font-size:40px;font-weight:bold">No department added!!</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}